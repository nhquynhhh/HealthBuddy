{
	"expo": {
		"name": "HealthBuddy",
		"slug": "HealthBuddy",
		"version": "1.0.0",
		"orientation": "portrait",
		"icon": "./assets/img_bare_logo.png",
		"userInterfaceStyle": "light",
		"splash": {
			"image": "./assets/img_full_logo.png",
			"resizeMode": "contain",
			"backgroundColor": "#ffffff"
		},
		"assetBundlePatterns": [
			"**/*"
		],
		"ios": {
			"supportsTablet": true
		},
		"android": {
			"adaptiveIcon": {
				"foregroundImage": "./assets/img_bare_logo.png",
				"backgroundColor": "#ffffff"
			},
			"package": "com.anonymous.HealthBuddy"
		},
		"web": {
			"favicon": "./assets/img_bare_logo.png"
		},
		"expo-notifications": {
			"icon": "./assets/img_bare_logo.png",
			"color": "#000000",
			"iosDisplayInForeground": true,
			"androidMode": "default",
			"androidCollapsedTitle": "New notification"
		},
		"plugins": [
			[
			  "expo-camera",
			  {
				"cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
				"microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
				"recordAudioAndroid": true
			  }
			],
			[
				"expo-image-picker",
				{
				  "photosPermission": "The app accesses your photos to let you share them with your friends."
				}
			],
			[
				"expo-media-library",
				{
				  "photosPermission": "Allow $(PRODUCT_NAME) to access your photos.",
				  "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos.",
				  "isAccessMediaLocationEnabled": true
				}
			  ]				
		  ]
	}
}